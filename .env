# Sports Notifications Backend - Environment Variables
# Copy this file to .env and fill in your values

# NBA API Configuration
# No API key required! Uses free NBA JSON endpoints from cdn.nba.com

# Event Detection Thresholds (optional, defaults provided)
EVENT_THRESHOLD_BLOWOUT_POINT_DIFFERENTIAL=20
EVENT_THRESHOLD_CLOSE_GAME_POINT_DIFFERENTIAL=5
EVENT_THRESHOLD_COMEBACK_POINT_DIFFERENTIAL=15

# Feature Flags
USE_EMOJI=false

# Firebase Configuration (automatically set by Firebase)
# FIREBASE_CONFIG={...}
# GCLOUD_PROJECT=your-project-id

# Future Sports APIs (when implementing)
# NFL_API_KEY=
# MLB_API_KEY=
# NHL_API_KEY=
# SOCCER_API_KEY=
